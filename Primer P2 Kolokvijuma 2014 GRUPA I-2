CREATE TABLE TURISTA
(
ID NUMBER(10) PRIMARY KEY,
IME VARCHAR2(25),
PREZIME VARCHAR2(35),
POL VARCHAR2(2),
ADRESA VARCHAR2(25),
GRAD VARCHAR2(25),
DRZAVA VARCHAR2(25)
);

