CREATE TABLE HOTEL 
(
ID NUMBER(10) PRIMARY KEY,
NAZIV VARCHAR2(25),
KAPACITET NUMBER(5),
BROJ_ZVEZDICA NUMBER(5),
NA_OBALI VARCHAR2(3),
ADRESA VARCHAR2(25),
GRAD VARCHAR2(25),
DRZAVA VARCHAR2(25)
);

